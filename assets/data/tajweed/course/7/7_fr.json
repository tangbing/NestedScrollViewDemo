            "subrules": [
              {
                "rule": "Fat-ha sur les noms",
                "definition": "Si un nom commence par Hamzatul Wasl, il prend un Fat-ha.",
                "examples": [
                  {
                    "text": "ٱسْمَاءُ",
                    "gambar": "704.jpg",
                    "suara": "704.mp3"
                  }
                ]
              },
              {
                "rule": "Kasra sur les noms",
                "definition": "Lorsqu'il n'y a pas de mot précédent connecté à Hamzatul Wasl, le nom prend un Kasra.",
                "examples": [
                  "اِبْتِدَآءُ",
                  "إِبْتِغَآءُ",
                  "اِسْمَآءِ",
                  "اِمْرَأَتِي",
                  "اِمْرَأَتُكَ"
                ]
              }
            ]
          },
          {
            "id": "1B",
            "title": "Au début des verbes",
            "subrules": [
              {
                "rule": "Damma sur les verbes",
                "definition": "Si la troisième lettre d'un verbe a un Damma, Hamzatul Wasl prend un Damma.",
                "examples": [
                  {
                    "text": "ٱدْخُلُوا",
